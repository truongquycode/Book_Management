<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" prefHeight="320.0" prefWidth="260.0" spacing="10" stylesheets="/application/application.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddressSelectionController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label alignment="CENTER" prefHeight="25.0" prefWidth="200.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Chọn Địa Chỉ Giao Hàng" textAlignment="CENTER" />
    <ComboBox fx:id="provinceComboBox" prefHeight="32.0" prefWidth="220.0" promptText="Chọn Tỉnh/Thành phố" />
    <ComboBox fx:id="districtComboBox" disable="true" prefHeight="32.0" prefWidth="220.0" promptText="Chọn Quận/Huyện" style="-fx-background-radius: 15px;" />
    <ComboBox fx:id="wardComboBox" disable="true" prefWidth="220.0" promptText="Chọn Xã/Phường/Thị trấn" style="-fx-background-radius: 15px;" />
    <TextField fx:id="streetTextField" maxWidth="-Infinity" prefWidth="220.0" promptText="Nhập tên đường" />
    <TextField fx:id="houseNumberTextField" maxWidth="-Infinity" prefWidth="220.0" promptText="Nhập số nhà" />
    <Button fx:id="confirmButton" prefHeight="32.0" prefWidth="220.0" styleClass="btn" text="Xác nhận" />
</VBox>
